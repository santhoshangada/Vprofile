node{
   stage('SCM Checkout'){
     git 'https://github.com/santhoshangada/Vprofile.git'
   }
   stage('Compile-Package'){
      // Get maven home path
      def mvnHome =  tool name: 'mvn363', type: 'maven'   
      sh "${mvnHome}/bin/mvn package"
   }
   stage('Deploy to Tomcat'){
      
      sshagent(['tomcat-dev']) {
         sh 'scp -o StrictHostKeyChecking=no target/*.war ec2-user@http://18.218.159.164:8080/:/opt/tomcat8/webapps/'
      }
   }
   

}
